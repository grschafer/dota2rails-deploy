// Configure and mv to config.js
var config = {};

config.steam_name = "{{ steam.name }}";
config.steam_user = "{{ steam.user }}";
config.steam_pass = "{{ steam.pass }}";
config.steam_guard_code = "{{ steam.guard_code }}";
config.cwd = "{{ deploy_path }}"; // Because node-forever is silly.

config.request_timeout = 1000 * 30;
config.steam_response_timeout = 1000 * 30;

config.mongodb_host = "{{ mongodb_host }}";
config.mongodb_port = {{ mongodb_port }};

module.exports = config;
